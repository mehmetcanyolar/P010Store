@model P010Store.Entities.Carousel

@{
    ViewData["Title"] = "Slider Düzenle";
}

<h1>Slider Düzenle</h1>

<h4>Slider Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
           
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
               
                @if (Model.Image != null && !string.IsNullOrWhiteSpace(Model.Image))
                {
                    <img class="mt-2" src="~/Img/@Model.Image" height="65" />
                    <span>@Model.Image</span>
                    <br />
                    <span class="text-danger mt-1">@Html.CheckBox("cbResimSil") Resimi Sil</span>

                }

                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

