@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Admin Login</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link href="~/css/signin.css" rel="stylesheet" />
</head>





    <body class="text-center">

    <main class="form-signin w-100 m-auto">
        <form  asp-action="Index">
           @* <img class="mb-4" src="/docs/5.2/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">*@
           
            <h1 class="h3 mb-3 fw-normal text-primary">Admin Paneli</h1>
           <h1 class="h3 mb-3 fw-normal">Lütfen giriş yapın...</h1>


            <div class="form-floating">
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="name@example.com">
                <label for="floatingInput">Email adresi</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="inputPassword"  name="password" placeholder="Şifre">
                <label for="floatingPassword">Şifre</label>
            </div>

           @* <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>*@ 
            <span class="text-danger">@TempData["Mesaj"]</span>
            <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Giriş</button>
            <p class="mt-5 mb-3 text-muted">© 2017–2023</p>
        </form>
    </main>





</body>

</html>

